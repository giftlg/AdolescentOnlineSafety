<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.AdolescentOnlineSafety.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AdolescentOnlineSafety.AppWidgetContainer">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/my_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#09C"
        android:orientation="vertical"
        android:padding="@dimen/widget_margin"/>

    <ImageView
        android:id="@+id/imageView_widget"
        android:layout_width="407dp"
        android:layout_height="353dp"
        android:layout_marginBottom="4dp"
        android:adjustViewBounds="true"
        android:background="#00FFFFFF"
        android:src="@drawable/app_widget"
        app:srcCompat="@drawable/aos_logo" />


    <Button
        android:id="@+id/button_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_widget"


        android:layout_alignParentBottom="true"
        android:layout_marginBottom="300dp"
        android:text="SOS" />
</RelativeLayout>